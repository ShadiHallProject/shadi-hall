<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/col1rowVehicleID"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:textColor="@android:color/black"
            android:layout_margin="3dp"
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="wrap_content"
            android:text="Vehicle ID"/>
        <TextView
            android:id="@+id/col2rowVehicleName"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:textColor="@android:color/black"
            android:layout_margin="3dp"
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="wrap_content"
            android:text="Vehicle Name"/>
        <TextView
            android:id="@+id/col3rowRegistrationNo"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:textColor="@android:color/black"
            android:layout_margin="3dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Registration No"/>

        <TextView
            android:id="@+id/col4rowStatus"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:textColor="@android:color/black"
            android:layout_margin="3dp"
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="wrap_content"
            android:text="Status"/>


        <ImageView
            android:id="@+id/col7rowImage"
            card_view:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:layout_weight="2"
            android:layout_marginRight="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>