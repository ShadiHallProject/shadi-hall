<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/containerlayout"
        android:layout_weight="17"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rowItem2GroupId"
            android:textSize="@dimen/textSize"
            android:layout_weight="5"
            android:layout_margin="3dp"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/expensed"/>

        <TextView
            android:textColor="@android:color/black"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSize"
            android:id="@+id/rowItem1TypeId"
            android:layout_weight="5"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Recieved"/>

        <TextView
            android:textColor="@android:color/black"
            android:textAlignment="textEnd"
            android:id="@+id/rowItem2GroupName"
            android:textSize="@dimen/textSize"
            android:layout_weight="5"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/expensed"/>

        <ImageView
            android:id="@+id/Imagethreedotpopup"
            card_view:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:layout_weight="2"
            android:layout_marginRight="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@android:color/black"
        android:layout_below="@id/containerlayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>