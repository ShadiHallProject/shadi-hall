<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SalePur1Fragment">

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <Spinner
            android:id="@+id/salpur_spinner"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="4" />

        <android.support.v7.widget.SearchView
            android:id="@+id/salpur_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:focusable="false"
            app:iconifiedByDefault="false"
            app:queryHint="Search..." />
        <ImageView
            android:id="@+id/salpur_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_add_col" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnhorizontal1"
                android:layout_marginEnd="10dp"
                android:text="    Grid View    "
                android:background="@drawable/round_corner_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnhorizontal2"
                android:layout_marginEnd="10dp"
                android:text="    Tree View    "
                android:background="@drawable/round_corner_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnhorizontal3"
                android:layout_marginEnd="10dp"
                android:text="    Other View    "
                android:background="@drawable/round_corner_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/containersalepur1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </LinearLayout>




</LinearLayout>