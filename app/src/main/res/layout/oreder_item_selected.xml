<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:id="@+id/containerlayout"
        android:layout_weight="22"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp">

            <TextView
                android:id="@+id/textview_title_itemName"
                android:textSize="@dimen/textSize"
                android:layout_weight="5"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/expensed"/>

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/textview_title_itemQuantity"
                android:textAlignment="center"
                android:textSize="@dimen/textSize"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Recieved"/>

        <TextView
            android:id="@+id/textview_title_itemPrice"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/expensed"/>

        <TextView
            android:id="@+id/textview_title_totalPrice"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/expensed"/>


        <ImageView
            android:id="@+id/Imagethreedotpopup"
            card_view:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:textSize="@dimen/textSize"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>