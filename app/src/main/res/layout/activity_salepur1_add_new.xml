    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabaddnewitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/addnew"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="28dp" />

    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#30A1D8"
        android:id="@+id/savebtn"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:text="Save"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_alignParentBottom="true"
        android:background="#F230A1D8"
        android:id="@+id/cancelbtn"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:text="Cancel"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:id="@+id/salpurrootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.Salepur1AddNewActivity">
<HorizontalScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/headimage1"
          android:layout_gravity="center"
          android:layout_margin="8dp"
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <ImageView
              android:layout_gravity="center"
              android:scaleType="fitXY"
              app:srcCompat="@drawable/print"
              android:layout_width="20dp"
              android:layout_height="30dp"/>
          <TextView
              android:text="Print"
              android:textAlignment="center"
              android:textSize="12sp"
              android:layout_width="40dp"
              android:layout_height="wrap_content"/>
      </LinearLayout>
        <LinearLayout
            android:id="@+id/headimage2"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/next"
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Back"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headimage3"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/back"
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Next"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headimage4"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/addnew"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:text="Add"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headimage5"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/edit"
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Edit"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headimage6"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/refresh"
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Update"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headimage7"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/search"
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Search"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Helo"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/receiyptno"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="5"
            android:id="@+id/date_picker"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:text="DAte Picker" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Account Name " />
    <Spinner
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:id="@+id/accountspinner"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/formname_of_person1"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_name_of_person"
            android:textSize="14sp"
            android:inputType="text"
            android:lines="2"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_remarks"
            android:textSize="14sp"
            android:inputType="text"
            android:lines="2"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/formdayleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_days_left"
            android:inputType="number"
            android:textSize="14sp"
            android:lines="2"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                    <LinearLayout
                        android:weightSum="11"
                        android:background="@color/tableheadbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/col1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ID"
                            android:textAlignment="center"
                            android:textColor="@color/rowheader"
                            android:textSize="@dimen/textSizerow"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/col2"
                            android:layout_weight="3.6"
                            android:layout_width="0dp"                            android:layout_height="wrap_content"
                            android:text="Item Desc"
                            android:textAlignment="center"
                            android:textColor="@color/rowheader"
                            android:textSize="@dimen/textSizerow"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col3"
                            android:layout_weight="2"
                            android:layout_width="0dp"                            android:layout_height="wrap_content"
                            android:text="Qty"
                            android:textAlignment="center"
                            android:textColor="@color/rowheader"
                            android:textSize="@dimen/textSizerow"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col4"
                            android:layout_weight="2"
                            android:layout_width="0dp"                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textAlignment="center"
                            android:textColor="@color/rowheader"
                            android:textSize="@dimen/textSizerow"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col5"
                            android:layout_weight="2"
                            android:layout_width="0dp"                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textColor="@color/rowheader"
                            android:textSize="@dimen/textSizerow"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col6"
                            android:layout_weight="0.4"
                            android:layout_width="0dp"                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/rowheader"
                            android:textSize="@dimen/textSizerow"
                            android:textStyle="bold" />


                    </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerviewsalepur2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

        </LinearLayout>

</LinearLayout>
</RelativeLayout>
