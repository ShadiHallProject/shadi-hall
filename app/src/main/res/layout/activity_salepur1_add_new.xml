<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salpurrootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.Salepur1AddNewActivity">

    <Button
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="DAte Picker" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Name " />
    <Spinner
        android:id="@+id/accountspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_remarks"
            android:inputType="text"
            android:lines="2"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:onClick="AddNewDialog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/round_corner_btn"
        android:text="Add Item One By One" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/col1"
                            android:layout_width="@dimen/hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="ID"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textSize"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/col2"
                            android:layout_width="@dimen/hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Item Desc"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col3"
                            android:layout_width="@dimen/hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Qnt"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col4"
                            android:layout_width="@dimen/hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Price"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col5"
                            android:layout_width="@dimen/hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col6"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textSize"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerviewsalepur2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
</LinearLayout>
